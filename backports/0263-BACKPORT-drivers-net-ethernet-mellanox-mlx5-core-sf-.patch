---
 .../net/ethernet/mellanox/mlx5/core/sf/dev/driver.c  | 12 +++++++++++-
 1 file changed, 11 insertions(+), 1 deletion(-)

--- a/drivers/net/ethernet/mellanox/mlx5/core/sf/dev/driver.c
+++ b/drivers/net/ethernet/mellanox/mlx5/core/sf/dev/driver.c
@@ -15,7 +15,7 @@ static int mlx5_sf_dev_probe(struct auxi
 	struct devlink *devlink;
 	int err;
 
-	devlink = mlx5_devlink_alloc();
+	devlink = mlx5_devlink_alloc(&adev->dev);
 	if (!devlink)
 		return -ENOMEM;
 
@@ -54,7 +54,12 @@ static int mlx5_sf_dev_probe(struct auxi
 		mlx5_core_warn(mdev, "mlx5_load_one err=%d\n", err);
 		goto load_one_err;
 	}
+#ifdef HAVE_DEVLINK_REGISTER_GET_1_PARAMS //forwardport
+	devlink_register(devlink);
+#endif
+#if defined(HAVE_DEVLINK_RELOAD_ENABLE) && !defined(HAVE_DEVLINK_SET_FEATURES)
 	devlink_reload_enable(devlink);
+#endif
 	return 0;
 
 load_one_err:
@@ -72,7 +77,12 @@ static void mlx5_sf_dev_remove(struct au
 	struct devlink *devlink;
 
 	devlink = priv_to_devlink(sf_dev->mdev);
+#if defined(HAVE_DEVLINK_RELOAD_ENABLE) && !defined(HAVE_DEVLINK_SET_FEATURES)
 	devlink_reload_disable(devlink);
+#endif
+#ifdef HAVE_DEVLINK_REGISTER_GET_1_PARAMS //forwardport
+	devlink_unregister(devlink);
+#endif
 	mlx5_unload_one(sf_dev->mdev, true);
 
